{
  "name": "create-react-app-express",
  "version": "1.0.0",
  "description": "React-app with a Node Express Backend",
  "author": {
    "name": "Varun Verma",
    "email": "verma9797@gmail.com",
    "url": "https://esausilva.com"
  },
  "license": "MIT",
  "scripts": {
    "client": "cd client && npm run start",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./serverBuild ./server -s",
    "build": "npm run clean && npm run build-babel",
    "start": "node app.js",
    "server": "nodemon app.js",
    "dev": "npm run build && concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev1": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:server": "cd client && npm run build && cd .. && npm run start",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "crypto": "^1.0.1",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^7.4.2",
    "morgan": "^1.9.1",
    "mysql": "^2.16.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3",
    "router": "^1.3.3"
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "concurrently": "^3.6.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1"
  },
  "keywords": [
    "node",
    "express",
    "create-react-app"
  ]
}
